<p id="notice"><%= notice %></p>

<h1>Listing Teslas</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Model</th>
      <th>Acceleration</th>
      <th>Braking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teslas.each do |tesla| %>
      <tr>
        <td><%= tesla.year %></td>
        <td><%= tesla.model %></td>
        <td><%= tesla.acceleration %></td>
        <td><%= tesla.braking %></td>
        <td><%= link_to 'Show', tesla %></td>
        <td><%= link_to 'Edit', edit_tesla_path(tesla) %></td>
        <td><%= link_to 'Destroy', tesla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

